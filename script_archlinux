# Yay installation
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

# Disable OS prober = false
sudo nvim /etc/default/grub
# uncomment
sudo grub-mkconfig -o /boot/grub/grub.cfg

sudo systemctl start bluetooth


